<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PemesananActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Pemesanan"
                android:textColor="@color/white" />
            <androidx.cardview.widget.CardView
                android:layout_below="@id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtidpemesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="xxxxxx"
                    android:editable="false"
                    android:textSize="14sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:text="Kuantitas Pemesanan"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtkuantitaspemesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="xxxxxx"
                    android:textSize="14sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:text="Tanggal Pemesanan"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_below="@id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/txtatanggalepemesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="xxxxxx"
                android:textSize="14sp"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:text="Waktu Pemesanan"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtwaktupemesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="xxxxxx"
                    android:textSize="14sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:text="Status Pemesanan"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtstatuspemesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:background="@color/white"
                    android:hint="xxxxxx"
                    android:textSize="14sp"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="#E53935"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableTint="#E8FFFFFF"
                    android:gravity="center"
                    android:text="Simpan"
                    android:textColor="#F0FFFFFF"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>